<?xml version="1.0" encoding="UTF-8"?>
<launch>


    <group ns="/billy_arm"> 

        <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find billy_description)/urdf/billy_arm.xacro'" />

        <arg name="x" default="0" />
        <arg name="y" default="0" />
        <arg name="z" default="0.05" />

        <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
              args="-urdf -param robot_description -model robot_arm -x $(arg x) -y $(arg y) -z $(arg z)" />

        

        <!-- Load controllers -->
        <rosparam command="load" file="$(find billy_arm)/config/billy_arm_joints.yaml" />
        
        <!-- Controllers -->
        <node name="controller_spawner" pkg="controller_manager" type="spawner"
            respawn="false" output="screen" ns="/billy_arm"
            args="--namespace=/billy_arm
            joint_state_controller
            joint1_position_controller
            joint2_position_controller
            joint3_position_controller
            joint4_position_controller
            
            --timeout 60">
        </node>

        <!-- rqt -->
        <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" />
        <node name="rqt_publisher" pkg="rqt_publisher" type="rqt_publisher" />

    </group> 

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find billy_description)/worlds/search_and_rescue_world.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>
</launch>